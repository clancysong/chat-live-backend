{
  "name": "live-chat-backend",
  "version": "1.0.0",
  "main": "index.js",
  "author": "clancysong",
  "license": "MIT",
  "scripts": {
    "serve": "nodemon --watch 'src/*' -e ts,tsx --exec ts-node src/index.ts",
    "test": "mocha -r ts-node/register test/**.test.ts",
    "setup": "psql -f src/db/sql/setup.psql",
    "migrate": "knex --knexfile knexfile.ts migrate:latest",
    "migrate:rb": "knex --knexfile knexfile.ts migrate:rollback",
    "migrate:mk": "knex --knexfile knexfile.ts migrate:make -x ts",
    "seed": "knex --knexfile knexfile.ts seed:run",
    "seed:mk": "knex --knexfile knexfile.ts seed:make -x ts",
    "db:restore": "yarn migrate:rb && yarn migrate && yarn seed"
  },
  "dependencies": {
    "ali-oss": "^6.1.1",
    "knex": "^0.19.5",
    "koa": "^2.7.0",
    "koa-body": "^4.0.8",
    "koa-logger": "^3.2.0",
    "koa-passport": "^4.1.1",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.1",
    "passport-local": "^1.0.0",
    "pg": "^7.8.0",
    "socket.io": "^2.2.0",
    "uuid": "^3.3.2",
    "ws": "^6.1.4"
  },
  "devDependencies": {
    "@types/ali-oss": "^6.0.3",
    "@types/chai": "^4.1.7",
    "@types/chai-http": "^3.0.5",
    "@types/knex": "^0.15.2",
    "@types/koa": "^2.0.48",
    "@types/koa-bodyparser": "^4.2.2",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-passport": "^4.0.2",
    "@types/koa-router": "^7.0.39",
    "@types/koa-session": "^5.10.0",
    "@types/koa-websocket": "^5.0.3",
    "@types/mocha": "^5.2.6",
    "@types/passport-local": "^1.0.33",
    "@types/socket.io": "^2.1.2",
    "@types/uuid": "^3.4.4",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "mocha": "^6.0.0",
    "nodemon": "^1.18.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.3"
  }
}
